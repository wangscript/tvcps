<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>

	<form-beans>
		<!-- RSS业务实体bean start-->  
        <form-bean name="rssForm" type="com.baize.ccms.plugin.rss.web.form.RssForm"/>
    </form-beans>
	<global-exceptions />
	<action-mappings>
	
	  	<!-- RSS业务action配置  start-->
        <action path="/rssInner"
             	type="org.springframework.web.struts.DelegatingActionProxy"   
                name="rssForm"
                scope="request"
                validate="false" >
            <forward name="saveSuccess"  path="/plugin/rss/rss_set.jsp"/>	
			<forward name="rssList"      path="/plugin/rss/rss_list.jsp"/>	
        </action>	
        <!-- RSS业务action配置  end -->
	
		<!-- RSS业务action配置  start-->
        <action path="/rssOuter"
             	type="org.springframework.web.struts.DelegatingActionProxy"   
                name="rssForm"
                scope="request"
                parameter="dealMethod">
                <forward name="rssList"        path="/plugin/rss/rss_list.jsp"/>
                <forward name="outRssSuccess"  path="/plugin/rss/out_rss_list_success.jsp"/>
        </action>	
        <!-- RSS业务action配置  end -->
	</action-mappings>
</struts-config>

