<?xml version="1.0" encoding="UTF-8"?>
<proxool-config>
   <proxool>
      <alias>house</alias>
      <driver-url>jdbc:mysql://127.0.0.1:3306/test?characterEncoding=utf8</driver-url>
      <driver-class>com.mysql.jdbc.Driver</driver-class>
      <driver-properties>
      <property name="user" value="root"/>
      <property name="password" value="root"/>
      </driver-properties>
      <house-keeping-sleep-time>60000</house-keeping-sleep-time>
      <!-- 最大连接数 -->
      <maximum-connection-count>10</maximum-connection-count>
      <!-- 最小连接数  -->　
      <minimum-connection-count>3</minimum-connection-count>
      <!-- 最少保持的空闲连接数 （默认5个） -->
      <prototype-count>1</prototype-count>
      <simultaneous-build-throttle>20</simultaneous-build-throttle>
      <recently-started-threshold>40000</recently-started-threshold>
      <overload-without-refusal-lifetime>50000</overload-without-refusal-lifetime>
      <maximum-active-time>60000</maximum-active-time>      
      <maximum-connection-lifetime>3600000</maximum-connection-lifetime>  
      <house-keeping-test-sql>select CURRENT_DATE</house-keeping-test-sql>
      <verbose>true</verbose>
      <trace>true</trace>     
   </proxool>
</proxool-config>