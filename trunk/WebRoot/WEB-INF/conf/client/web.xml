<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.4" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee   http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <display-name>ccms</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>/setup/login.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>com.baize.ccms.sys.ClientStartListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>
      	/WEB-INF/struts-config.xml,
      	/WEB-INF/classes/com/baize/ccms/plugin/guestbookmanager/guestbookmanager-str.xml,
      	/WEB-INF/classes/com/baize/ccms/biz/usermanager/usermanager-str.xml,
      	/WEB-INF/classes/com/baize/ccms/biz/sitemanager/sitemanager-str.xml,
      	/WEB-INF/classes/com/baize/ccms/biz/columnmanager/columnmanager-str.xml,
      	/WEB-INF/classes/com/baize/ccms/biz/configmanager/configmanager-str.xml,
      	/WEB-INF/classes/com/baize/ccms/biz/documentmanager/documentmanager-str.xml,
      	/WEB-INF/classes/com/baize/ccms/biz/articlemanager/articlemanager-str.xml,
      	/WEB-INF/classes/com/baize/ccms/biz/templatemanager/templatemanager-str.xml,
      	/WEB-INF/classes/com/baize/ccms/biz/publishmanager/publishmanager-str.xml,
      	/WEB-INF/classes/com/baize/ccms/biz/messagemanager/messagemanager-str.xml,
      	/WEB-INF/classes/com/baize/ccms/biz/unitmanager/unitmanager-str.xml,
      	/WEB-INF/classes/com/baize/ccms/plugin/guestbookmanager/guestbookmanager-str.xml,
      	/WEB-INF/classes/com/baize/ccms/plugin/letterbox/letterbox-str.xml,
      	/WEB-INF/classes/com/baize/ccms/plugin/pluginmanager/pluginmanager-str.xml,
      	/WEB-INF/classes/com/baize/ccms/plugin/rss/rssmanager-str.xml,
      	/WEB-INF/classes/com/baize/ccms/plugin/articlecomment/articlecomment-str.xml,     	
      	/WEB-INF/classes/com/baize/ccms/plugin/onlinesurvey/onlinesurvery-str.xml,
      	      	/WEB-INF/classes/com/baize/ccms/plugin/onlineBulletin/onlineBulletin-str.xml
      </param-value>
    </init-param>
    <init-param>
      <param-name>debug</param-name>
      <param-value>2</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/applicationContext-*.xml,classpath*:applicationContext-*.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <filter>
    <filter-name>Spring character encoding filter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>Spring character encoding filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>OpenSessionInViewFilter</filter-name>
    <filter-class>org.springframework.orm.hibernate3.support.OpenSessionInViewFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>OpenSessionInViewFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!-- 
  <filter>
  	<filter-name>SystemFilter</filter-name>
  	<filter-class>com.baize.ccms.sys.SystemFilter</filter-class>  	
  </filter>
  <filter-mapping>
  	<filter-name>SystemFilter</filter-name>
  	<url-pattern>/index.jsp</url-pattern>	
  </filter-mapping>
  --> 
  <servlet>
    <servlet-name>proxool</servlet-name>
    <servlet-class>org.logicalcobwebs.proxool.admin.servlet.AdminServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>proxool</servlet-name>
    <url-pattern>/admin/proxool/</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ServletConfigurator</servlet-name>
    <servlet-class>
    	org.logicalcobwebs.proxool.configuration.ServletConfigurator
    </servlet-class>
    <init-param>
    	<param-name>xmlFile</param-name>
    	<param-value>/WEB-INF/classes/outer-dbconf.xml</param-value>
    </init-param>
    <load-on-startup>3</load-on-startup>
  </servlet>

  
   <servlet>
    <servlet-name>webClientServlet</servlet-name>
    <servlet-class>com.baize.common.core.web.WebClientServlet</servlet-class>
  </servlet>
  <servlet>
		<description>
		</description>
		<display-name>
		CheckInit</display-name>
		<servlet-name>CheckInit</servlet-name>
		<servlet-class>
		com.baize.ccms.biz.setupmanager.servlet.CheckInit</servlet-class>
	</servlet>
   <servlet>
   	<description></description>
   	<display-name>SetupServlet</display-name>
   	<servlet-name>SetupServlet</servlet-name>
   	<servlet-class>com.baize.ccms.biz.setupmanager.servlet.SetupServlet</servlet-class>
   </servlet>
   <servlet>
   	<description>
   	</description>
   	<display-name>
   	upload</display-name>
   	<servlet-name>upload</servlet-name>
   	<servlet-class>
   	com.baize.ccms.biz.setupmanager.servlet.upload</servlet-class>
   </servlet>
   <servlet-mapping>
		<servlet-name>CheckInit</servlet-name>
		<url-pattern>/CheckInit</url-pattern>
	</servlet-mapping>
  <servlet-mapping>
    <servlet-name>webClientServlet</servlet-name>
    <url-pattern>/webClient</url-pattern>
  </servlet-mapping>
 <servlet-mapping>
    <servlet-name>SetupServlet</servlet-name>
    <url-pattern>/SetupServlet</url-pattern>
  </servlet-mapping>
 <servlet-mapping>
 	<servlet-name>upload</servlet-name>
 	<url-pattern>/upload</url-pattern>
 </servlet-mapping>
  
  <jsp-config>
    <taglib>
      <taglib-uri>/WEB-INF/tlds/complat.tld</taglib-uri>
      <taglib-location>/WEB-INF/tlds/complat.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>/WEB-INF/tlds/ccms.tld</taglib-uri>
      <taglib-location>/WEB-INF/tlds/ccms.tld</taglib-location>
    </taglib>
  </jsp-config>
  <session-config>
    <session-timeout>100</session-timeout>
  </session-config>
</web-app>

